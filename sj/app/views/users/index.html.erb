
<div class="col-lg-12">
  <h3 class="page-header">账户管理
    <%= link_to "添加账户", new_user_path, :class => "btn btn-default" %>
  </h3>
</div>


<div class="col-lg-12">
  <table class="table table-hover">
    <thead>
    <tr>
      <th></th>
      <th>编号</th>
      <th>用户名</th>

      <th>类型</th>
      <th>状态</th>
      <th>数据类型</th>
      <th>网站域名</th>
      <th>备注</th>
      <th>创建时间</th>


    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><input type="checkbox"></td>
          <td><%= user.id %></td>
          <td><%= user.name %></td>

          <td><%= user.type %></td>
          <td><%= user.status %></td>
          <td><%= user.datatype %></td>
          <td><%= user.website %></td>
          <td><%= user.description %></td>
          <td><%= user.created_at %></td>
          <td><%= link_to "修改",edit_user_path(user) %></td>
          <td><%= link_to "删除",users_path(user),
                          :method=>:delete, :data=>{:confirm => "Sure?"}
          %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <div class="page">
    <%= paginate @users %>
  </div>
</div>
